{
  "name": "json-bigint",
  "version": "1.0.0",
  "description": "The symmetrical and backwards compatible JSON serializer/parser with bigint support.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "set -e; tsc; npm run rollup; npm run terser",
    "rollup": "rollup --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --exports named --plugin @rollup/plugin-node-resolve",
    "terser": "terser --compress --mangle toplevel --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles",
    "perf": "node --max-old-space-size=4096 ./src/test/perf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/json-bigint.git"
  },
  "keywords": [
    "json",
    "bigint"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/json-bigint/issues"
  },
  "homepage": "https://github.com/smikhalevski/json-bigint#readme",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@smikhalevski/perf-test": "^1.0.0",
    "@types/jest": "^26.0.23",
    "chalk": "^4.1.2",
    "jest": "^27.0.2",
    "json-bigint": "^1.0.0",
    "rollup": "^2.50.5",
    "terser": "^5.7.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "tokenizer-dsl": "1.0.0"
  }
}
